#!/bin/bash

source $HOME/.virtualenvs/ansible/bin/activate

echo "=> Linting Ansible Code"
fail_ansible=0
for f in `find . -name "*.yml" -maxdepth 1`; do
    echo "==> LINTING $f"
    if [[ ! -z "$1" ]]; then
        ansible-lint -v $1 $f
    else
        ansible-lint -v $f
    fi
    rc=$?
    if [[ $rc != 0 ]]; then
        echo "==> LINTING FAILED: $f"
        fail_ansible=1
    fi
done

if [[ $fail_ansible == 1 ]]; then
    echo "FAILED ansible-lint" >&2
    exit 1
else
    echo "PASSED ansible-lint"
    exit 0
fi
